*
  box-sizing: border-box

body
  margin: 0
  font-family sans-serif

ul, ol
  margin 0
  padding 0
  list-style none

button
  background none
  border none
  padding 0
  color inherit
  font-size inherit
  cursor pointer

input
  background none
  border none
  font-size inherit

button, input
  &:focus
    outline none

h1, h2, h3, h4, h5, h6
  margin 0
  font-size inherit
  font-weight inherit
