@import 'src/styles/reset.styl'

body
  font-size 20px

ul
  margin 1.5rem 0

ol
  margin 1.5rem 0
  padding-left 2rem
  list-style decimal

img
  display block
  margin 0 auto

li:not(:last-child)
  margin-bottom 1rem

#help-header
  padding 2rem
  text-align center

#help-page-heading
  margin-bottom 1rem
  font-size 5rem

#help-page-body
  width 80%
  margin: 0 auto 1rem

.navigation-link
  display block
  padding 1rem
  background rgb(100, 100, 100)
  color white
  text-align center
  text-decoration none
  transition 0.5s background

  &:hover
    background rgb(150, 150, 150)

#manual-navigation
  width 20%
  margin 0 auto

.bullet-list
  list-style disc
  padding-left 2rem
