#layer-pane
  display flex
  flex-direction column
  width 20%
  background mainInterfaceColor
  padding 1rem

#layer-pane-controls
  display flex
  flex-direction column
  margin-bottom 2rem

#layer-pane-creation-controls
  display flex
  justify-content center
  padding-bottom 1rem

#layer-pane-manipulation-controls
  display flex
  justify-content space-between

#layer-list
  flex-grow 1
  overflow-y auto

.layer-pane-item
  display flex
  align-items center
  padding 0.5rem
  transition background 0.1s

.layer-pane-item-selected
  background #444

.layer-thumbnail-container
  display flex
  align-items center
  justify-content center
  height 50px
  width 50px
  margin: 0 0.5rem

.layer-thumbnail
  background url(checker.png) repeat

.layer-name
  flex-grow 1
  overflow hidden
  text-align center
  text-overflow ellipsis

.layer-pane-item-visibility-button
  flex-shrink 0
  height 20px
  width 20px
  border 4px solid
  border-radius 100%
  transition background 0.1s

.layer-pane-item-visibility-button-visible
  background black

.layer-shift-container
  display flex
  flex-direction column
  justify-content space-around
  align-self stretch

.layer-shift-button
  border-left 10px solid transparent
  border-right 10px solid transparent
  visibility none
  opacity 0
  transition-property visibility, opacity
  transition-duration 0.1s

  .layer-pane-item:hover &
    visibility visible
    opacity 1

.layer-shift-up-button
  border-bottom 10px solid

.layer-shift-down-button
  border-top 10px solid
